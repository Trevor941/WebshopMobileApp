<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebshopMobileApp.Pages.Controls.RecommendedProductsView"
             xmlns:fonts="clr-namespace:Fonts"
              xmlns:pageModels="clr-namespace:WebshopMobileApp.PageModels"
             xmlns:models="clr-namespace:WebshopMobileApp.Models"
             x:DataType="models:ProductsWithQuantity"
             xmlns:shimmer="clr-namespace:Syncfusion.Maui.Toolkit.Shimmer;assembly=Syncfusion.Maui.Toolkit">
    

    <VerticalStackLayout Spacing="10">
        <Border Stroke="#f1f1f1"
        StrokeThickness="0"
                Background="#f1f1f1"
        StrokeShape="RoundRectangle 15"
        Padding="5">
          
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image 
              Source="{Binding FileUrl}"
               Aspect="AspectFill"
                       HeightRequest="130"
                       BackgroundColor="#0698d5" Grid.Row="0"
             Margin="0">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer 
                      Command="{Binding x:DataType='pageModels:MyCartPageModel', Source={RelativeSource AncestorType={x:Type pageModels:MyCartPageModel}}, Path=RecommendedProductPopupCommand}"
                      CommandParameter="{Binding}" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="{Binding Description}" TextColor="#000" Grid.Row="1" FontSize="15" HeightRequest="20" FontAttributes="Bold" />
                <Label Text="{Binding Price, StringFormat='R{0:F2}'}" Grid.Row="2" TextColor="#000" FontSize="20" FontAttributes="Bold" TextTransform="Uppercase"/>
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentView>
