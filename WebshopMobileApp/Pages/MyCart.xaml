<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:WebshopMobileApp.PageModels"
             xmlns:models="clr-namespace:WebshopMobileApp.Models"
             x:Class="WebshopMobileApp.Pages.MyCart"
             xmlns:controls="clr-namespace:WebshopMobileApp.Pages.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="pageModels:MyCartPageModel"
             >



    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding LoadCartItemsCommand}" />
    </ContentPage.Behaviors>



    <VerticalStackLayout Spacing="0" Padding="0, 0, 0 ,0">
        <Border
            Background="#f1f1f1"
            Stroke="#0698d5"
            StrokeThickness="0"
            Padding="18">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0" />
            </Border.StrokeShape>
            <Label
                 Text="My Cart"
                FontAttributes="Bold"
                FontSize="28"
                TextColor="#000"
                VerticalOptions="Center">
            </Label>
        </Border>

        <CollectionView x:Name="CartCollectionView"
        ItemsSource="{Binding Cart}"
        Margin="10"  HeightRequest="250" BackgroundColor="#f1f1f1">
            <CollectionView.ItemTemplate>
                <DataTemplate  x:DataType="models:CartModel">
                    <VerticalStackLayout>
                        <Border Stroke="Transparent" BackgroundColor="Transparent"
                            StrokeThickness="0" 
                            Padding="10" 
                            StrokeShape="RoundRectangle 10"
                            Margin="5" Background="Transparent">
                            <Grid ColumnDefinitions="*,3*" RowDefinitions="Auto,Auto,Auto"  >
                                <!-- Product Image -->
                                <Border Stroke="#ddd" StrokeThickness="0" Padding="0"  StrokeShape="RoundRectangle 8">
                                    <Image Grid.Column="0"
                                Source="{Binding FileUrl}"
                                Aspect="AspectFill"
                                        HeightRequest="90"
                                           WidthRequest="100"
                                        BackgroundColor="#ddd"
                                Margin="0">

                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer 
                                         Command="{Binding x:DataType='pageModels:MyCartPageModel', Source={RelativeSource AncestorType={x:Type pageModels:MyCartPageModel}}, Path=ProductPopupCommand}"
                                         CommandParameter="{Binding}" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                </Border>

                                <StackLayout Grid.Column="1" Margin="10,0,0,0" Spacing="5">
                                    <Label Text="{Binding Description}" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                                    <Label Text="{Binding Quantity, StringFormat='Qty: {0}'}" FontSize="Small" TextColor="#0698d5"/>
                                    <Label Text="{Binding Price, StringFormat='R{0:F2}'}"
                                    FontSize="Large" TextColor="#000" FontAttributes="Bold"
                                    />
                                </StackLayout>
                                <Image Grid.Column="2"
                                   Source="delete.png"
                                   Aspect="AspectFit"
                                          HeightRequest="30"
                                          HorizontalOptions="End"
                                   Margin="0">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer 
                                        Command="{Binding x:DataType='pageModels:MyCartPageModel', Source={RelativeSource AncestorType={x:Type pageModels:MyCartPageModel}}, Path=DeleteCartItemCommand}"
                                        CommandParameter="{Binding}" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </Border>
                        <!-- Divider Line -->
                        <BoxView HeightRequest="1"
                             BackgroundColor="#E0E0E0"
                             Margin="15,0" />
                    </VerticalStackLayout>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <VerticalStackLayout Padding="10" Spacing="10" Background="#fff">
            <Label
                Text="Last Minute Recommendations"
                FontAttributes="Bold"
                FontSize="28"
                 LineHeight="1.0"
                TextColor="#000"
                VerticalOptions="Center">
            </Label>
            <ScrollView Orientation="Horizontal"
                        Margin="-30,0" HeightRequest="200">
                                    <HorizontalStackLayout
                    Spacing="15"
                    Padding="30,0"
                    BindableLayout.ItemsSource="{Binding Products}">

                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="models:ProductsWithQuantity">
                            <VerticalStackLayout Spacing="6">
                                <!--<controls:RecommendedProducts WidthRequest="120" />-->

                                <controls:RecommendedProductsView WidthRequest="150">
                                    <controls:RecommendedProductsView.GestureRecognizers>
                                        <TapGestureRecognizer  Command="{Binding x:DataType='pageModels:MyCartPageModel', Source={RelativeSource AncestorType={x:Type pageModels:MyCartPageModel}}, Path=ProductPopup}"
                                         CommandParameter="{Binding}"/>
                                    </controls:RecommendedProductsView.GestureRecognizers>
                                </controls:RecommendedProductsView>
                            </VerticalStackLayout>
                            
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>

                </HorizontalStackLayout>
            </ScrollView>
            <Border StrokeShape="RoundRectangle 8"
                    Padding="5"
                    Background="#0698d5">
                <Grid  ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Text="CHECKOUT"
                        TextColor="White" Command="{Binding CheckoutCartCommand}"
                        VerticalOptions="Center" Background="Transparent" Padding="5"
                        Grid.Column="0" />

                    <Label Text="{Binding TotalIncStr}"
                        TextColor="White"
                        VerticalOptions="Center"
                        HorizontalTextAlignment="End"
                        Grid.Column="1" />
                </Grid>
            </Border>
            <!--<Border>
                <Button Command="{Binding TestPopupCommand}" Text="Popup Test"/>
            </Border>-->
        </VerticalStackLayout>
        
    </VerticalStackLayout>
</ContentPage>